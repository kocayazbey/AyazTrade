{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "allowJs": false,
    "paths": {
      "@/*": ["src/*"],
      "@nestjs/common": ["node_modules/@nestjs/common"],
      "@nestjs/core": ["node_modules/@nestjs/core"],
      "@nestjs/config": ["node_modules/@nestjs/config"],
      "@nestjs/event-emitter": ["node_modules/@nestjs/event-emitter"],
      "@nestjs/throttler": ["node_modules/@nestjs/throttler"],
      "@nestjs/bull": ["node_modules/@nestjs/bull"]
    }
  },
  "include": [
    "src/main.ts",
    "src/app.module.ts",
    "src/auth.controller.ts",
    "src/core/**/*",
    "src/config/**/*",
    "src/database/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "test/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "**/*.e2e.ts",
    "src/modules/**/*"
  ]
}
